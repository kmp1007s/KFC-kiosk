<UserControl x:Class="KfcKiosk.PaymentCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KfcKiosk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        
        <Style x:Key="categoryMenu" TargetType="Button">
            <Setter Property="Background" Value="#de101d" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="categoryItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="#de101d"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0 0 0 5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="foodMenu" TargetType="StackPanel">
            <Setter Property="Background" Value="#de101d" />
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="tableHead" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="menuPanel" TargetType="ListView">
            <Setter Property="Background" Value="#ffc547"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <Style x:Key="totalAmount" TargetType="TextBlock">
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>

        <Style x:Key="countBtn" TargetType="Button">
            <Setter Property="Background" Value="#de101d"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="Prev_Ctrl" Width="50" Height="50" Background="Transparent" BorderBrush="Transparent">
                <Image Source="Assets/Public/Arrow.png"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <Image Source="Assets/Public/KFC-logo1.png"/>
            <TextBlock Text="Table No. " FontWeight="Bold"/>
            <TextBlock x:Name="tableId"  Text="1"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <TextBlock Text="최근 주문 시간 " FontWeight="Bold"/>
            <TextBlock x:Name="leastOrderTime" HorizontalAlignment="Right"/>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Style="{StaticResource categoryMenu}" Content="전체 취소" Click="Clear"/>
        </StackPanel>

        <ListView x:Name="lvCategory" SelectionChanged="LvCategory_SelectionChanged" Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" Margin="0 10 0 0" BorderThickness="0">
            <ListViewItem Content="All" Style="{StaticResource categoryItem}"/>
            <ListViewItem Content="Burger" Style="{StaticResource categoryItem}"/>
            <ListViewItem Content="Chickin" Style="{StaticResource categoryItem}"/>
            <ListViewItem Content="Drink" Style="{StaticResource categoryItem}"/>
            <ListViewItem Content="Snack" Style="{StaticResource categoryItem}"/>
        </ListView>

        <ListView x:Name="lvMenu" SelectionChanged="LvMenu_SelectionChanged" Grid.Row="2" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="2" Style="{StaticResource menuPanel}">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" ItemHeight="170" ItemWidth="170"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Style="{StaticResource foodMenu}">
                        <Image Source="{Binding ImgPath}" Margin="0 0 0 10"/>
                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding Price}" HorizontalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView x:Name="lvOrdered" BorderThickness="0" Background="#ffc547" Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" Margin="0 10 0 0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Background="White">
                        <TextBlock Text="{Binding Name}" Margin="10" Width="150" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Price}" Margin="10" Width="30" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Count}" Margin="10" Width="20" VerticalAlignment="Center"/>
                        <Button Content="+" Style="{StaticResource countBtn}" Click="Counting" Margin="10" Width="20" VerticalAlignment="Center"/>
                        <Button Content="-" Style="{StaticResource countBtn}" Click="Counting" Margin="10" Width="20" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="totalPrice" Text="{Binding Total}" Grid.Row="4" Grid.Column="3" Style="{StaticResource totalAmount}"/>
    </Grid>
</UserControl>