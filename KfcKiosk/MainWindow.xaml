<Window x:Class="KfcKiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KfcKiosk"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0">
                <Image Source="./Assets/Public/KFC-logo1.png" Width="100" Height="100"/>
                <TextBlock FontSize="30">현재 시각 : </TextBlock>
                <TextBlock x:Name="CurrentTime"></TextBlock>
            </TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Width="90" Height="40" Margin="0,0,20,0">결제하기</Button>
                <Button Width="90" Height="40" Margin="0,0,20,0">통계보기</Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">

        </Grid>
    </Grid>
</Window>
