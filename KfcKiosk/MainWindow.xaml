<Window x:Class="KfcKiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:KfcKiosk"
        xmlns:local="clr-namespace:KfcKiosk"
        mc:Ignorable="d"
        Title="KFC 주문 시스템">
    <Grid>
        <Grid x:Name="loadingView" Background="Tomato" Visibility="Visible">
            <Image Source="Assets/Public/KFC-logo1.png" Width="100"/>
        </Grid>

        <local:SeatCtrl x:Name="seatCtrl" Visibility="Collapsed"></local:SeatCtrl>
        <local:Analysis x:Name="analysisCtrl" Visibility="Collapsed"></local:Analysis>
    </Grid>
</Window>
